{% extends "base.html.jinja" %}
{% block title %}
Product list | CeneoScrapper
{% endblock title %}
{% block content %}
<div class="container" style="height: 40vh;">
    <div class=" row justify-content-center  align-items-center row-cols-1 row-cols-md-1 g-5 m-4"
        style="max-width: 1080px; height: 100%;">
        <div class="col table-responsive">
            <h1 class="h3">Product List</h1>
            <ul class="list-group">
                {% for product in products %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="{{url_for('product', code=product.product_code)}}">{{product.product_code}}</a>
                    <span class="badge bg-primary rounded-pill">{{product.opinions_count}}</span>
                    <span class="badge bg-danger rounded-pill">{{product.cons_count}}</span>
                    <span class="badge bg-success rounded-pill">{{product.pros_count}}</span>
                    <span class="badge bg-secondary rounded-pill">{{product.average_score|round(2)}}</span>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock content %}
{% block scripts %}
<script src="https://code.jquery.com/jquery-3.6.4.js" integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E="
    crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
{% endblock scripts %}